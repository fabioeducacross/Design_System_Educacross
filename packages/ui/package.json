{
    "name": "@educacross/ui",
    "version": "0.1.0",
    "description": "Educacross Design System - UI Components",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "sideEffects": [
        "**/*.css"
    ],
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.mjs"
            },
            "require": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            }
        },
        "./styles.css": "./dist/styles.css",
        "./tailwind-preset": {
            "import": {
                "types": "./dist/tailwind-preset.d.ts",
                "default": "./dist/tailwind-preset.mjs"
            },
            "require": {
                "types": "./dist/tailwind-preset.d.ts",
                "default": "./dist/tailwind-preset.js"
            }
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "lint": "eslint src --ext .ts,.tsx",
        "typecheck": "tsc --noEmit",
        "clean": "rimraf dist",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "prepublishOnly": "pnpm build && pnpm typecheck"
    },
    "peerDependencies": {
        "react": "^18.2.0 || ^19.0.0",
        "react-dom": "^18.2.0 || ^19.0.0"
    },
    "dependencies": {
        "@radix-ui/react-slot": "^1.1.1",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "react-feather": "^2.0.10",
        "react-zoom-pan-pinch": "^3.7.0",
        "tailwind-merge": "^3.4.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.1",
        "@testing-library/user-event": "^14.6.1",
        "@types/react": "^18.3.18",
        "@types/react-dom": "^18.3.5",
        "@vitejs/plugin-react": "^4.3.4",
        "@vitest/coverage-v8": "^4.0.16",
        "autoprefixer": "^10.4.20",
        "jsdom": "^27.4.0",
        "postcss": "^8.4.49",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "rimraf": "^6.0.1",
        "tailwindcss": "^3.4.17",
        "tsup": "^8.3.5",
        "typescript": "^5.7.2",
        "vitest": "^4.0.16"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://npm.pkg.github.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/fabioeducacross/Deisign_System_Educacross.git",
        "directory": "packages/ui"
    },
    "homepage": "https://github.com/fabioeducacross/Deisign_System_Educacross#readme",
    "bugs": {
        "url": "https://github.com/fabioeducacross/Deisign_System_Educacross/issues"
    },
    "author": "Educacross <contato@educacross.com.br>",
    "keywords": [
        "design-system",
        "react",
        "components",
        "educacross",
        "tailwindcss"
    ],
    "license": "MIT"
}